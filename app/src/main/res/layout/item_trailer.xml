<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/item_trailer_playbtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_play_circle_filled_black_24dp" android:layout_gravity="center"
        android:layout_weight="0.3"
        />

    <TextView
        android:id="@+id/item_trailer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:textSize="16sp"
        android:text="Official Trailer #1"  />


</LinearLayout>
